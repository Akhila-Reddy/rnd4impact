<p class="p1"><span class="Apple-converted-space">    </span>&lt;script&gt;</p>
<p class="p1"><span class="Apple-converted-space">        </span>function calculateScore() {</p>
<p class="p1"><span class="Apple-converted-space">            </span>let score = 0;</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">            </span>// Check answers for question 1</p>
<p class="p1"><span class="Apple-converted-space">            </span>const answer1 = document.querySelector('input[name="q1"]:checked').value;</p>
<p class="p1"><span class="Apple-converted-space">            </span>if (answer1 === "Paris") {</p>
<p class="p1"><span class="Apple-converted-space">                </span>score += 1;</p>
<p class="p1"><span class="Apple-converted-space">            </span>}</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">            </span>// Check answers for question 2</p>
<p class="p1"><span class="Apple-converted-space">            </span>const answer2 = document.querySelector('input[name="q2"]:checked').value;</p>
<p class="p1"><span class="Apple-converted-space">            </span>if (answer2 === "Jupiter") {</p>
<p class="p1"><span class="Apple-converted-space">                </span>score += 1;</p>
<p class="p1"><span class="Apple-converted-space">            </span>}</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">            </span>// Display the score</p>
<p class="p1"><span class="Apple-converted-space">            </span>document.getElementById('score').textContent = score;</p>
<p class="p1"><span class="Apple-converted-space">        </span>}</p>
<p class="p1"><span class="Apple-converted-space">    </span>&lt;/script&gt;</p>
